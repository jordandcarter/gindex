<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">

<html>

<head>
<meta http-equiv="Content-type" content="text/html; charset=utf-8">

<title><%= yield :title %> - <%= NAME %></title>
<link rel="shortcut icon" href="http://staffnet.net.ad.wcc.govt.nz/themes/intranet/images/intranet/icons/favicon.ico">
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag :defaults, 'jquery.flot.min', "jquery.corners", :cache => "base" %>
</head>


<body class='firethedeathray'>
  <div class="container">
    <div class="header">
        <div class="banner_left"></div>
        <div class="banner_right">
          <% if current_user %>
            <div class="right"><%= render :partial => "user_sessions/actions" %></div>
            <div class='clear'><!-- / --> </div>
          <% end %>
          <div class="gbtrack_icon">
        </div>
      </div>
    </div>
    <div class='clear'><!-- / --> </div>
    <div class="content">
      <% unless (yield :login).blank? %><div class="login_details"><%= yield :login %></div><% end %>
      <% if flash[:notice] %>
      <div class="ui-widget">
      <div class="ui-state-highlight ui-corner-all" style="padding: 0pt 0.7em; margin-top: 20px;">
      <p><span class="ui-icon ui-icon-info" style="float: left; margin-right: 0.3em; margin-bottom: 0.2em;"><!-- / --></span><div id='flash-notice'> <%= flash[:notice] %></div></p>
      </div>
      </div>
      <% end %>
      <% if flash[:error] %>
      <div class="ui-widget">
      <div class="ui-state-error ui-corner-all" style="padding: 0 .7em;">
      <p><span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em; margin-bottom: 0.2em;"></span><div id='flash-error'><%= flash[:error] %></div></p>
      </div>
      </div>
      <% end %>
      <div class="left_right_col">
        <div class="left_col">
          <%= render :partial => 'common/account' %>
          <div class='clear'><!-- / --> </div>
        </div>
        <div class="right_col">
          <%= yield %>
        </div>
       <div class='clear'><!-- / --> </div>
      </div>
    </div>
    <div class="footer banner_bottom_middle">
      <div class="banner_bottom_left"><!-- / --></div>
      <div class="banner_bottom_right"><!-- / --></div>
    </div>
  </div>
  <script type="text/javascript">
  $(document).ready(function(){
    $('.round').corner("5px");
    $('.round-border').corner("round 5px");
    $(".notes").corner("round 10px");
    $(".round_plain.highlighted").corner("round 5px");
    $(".round_plain.nav_action").corner("round 5px");
  });
  </script>
</body>


</html>
